<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="LocationNotesAppUser.MainNotes"
             Loaded="main_Loaded">
    <Grid x:Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Label Grid.Column="0" Text="GeoNotes" HorizontalOptions="Start" FontSize="Title" FontAttributes="Bold"/>

        <Button Grid.Column="1" x:Name="newNoteBtn" HorizontalOptions="End" Text="New Note" Clicked="newNoteBtn_Clicked"/>
    </Grid>
</ContentPage>