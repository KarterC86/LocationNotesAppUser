<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocationNotesAppUser.MainNotes">
    <VerticalStackLayout>
        <Grid>
            <Label Grid.Column="0" Text="Notes" HorizontalOptions="Start" FontSize="Title" FontAttributes="Bold"/>

            <Button Grid.Column="1" x:Name="newNoteBtn" HorizontalOptions="End" Text="New Note" Clicked="newNoteBtn_Clicked"/>
        </Grid>

        <CollectionView x:Name="notesList" SelectionChanged="notesList_SelectionChanged" SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        
                        <Label Grid.Column="0" Text="{Binding Name}" FontSize="18"/>
                        <Label Grid.Column="1" Text="{Binding Desc}" FontSize="14" TextColor="Gray"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>